<p id="notice"><%= notice %></p>

<p>
  <h2>
  <%= @brewery.name %>
  </h2>
</p>

<p>
  <i>
  Established year:
  <%= @brewery.year %>
  </i>
</p>
<p>
  Number of beers <%= @brewery.beers.count %>
</p>

<p>
<% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
 <% end %>
</p>

<p>
  <%= unless @brewery.ratings.empty?
        'Has ' + pluralize(@brewery.ratings.count,'rating') + ' , average ' + @brewery.average_rating.to_f.to_s
  end %>
</p>

<%= link_to 'Edit', edit_brewery_path(@brewery) %><br>
<% if current_user and current_user.admin %>
<%= link_to 'Destroy the brewery', @brewery, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
